<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browser_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_black_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <com.maning.gankmm.ui.imagebrowser.MNGestureView
        android:id="@+id/mnGestureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerBrowser"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.maning.gankmm.ui.imagebrowser.MNGestureView>


    <TextView
        android:id="@+id/tvNumShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/mn_browser_num_bg"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:text="0/0"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <View
        android:id="@+id/view_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/view_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f1ededed"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_click_01"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="#2e2e2e"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_click_02"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:text="分享"
            android:textColor="#2e2e2e"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_click_03"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:text="设置壁纸"
            android:textColor="#2e2e2e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_click_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#2e2e2e"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
